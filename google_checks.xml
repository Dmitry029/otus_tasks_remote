<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">

    <module name="TreeWalker">

        <!-- Ограничение длины строки 100 символов -->
        <module name="LineLength">
            <property name="max" value="100"/>
            <property name="ignorePattern" value="^package.*|^import.*|a href|href|http://|https://"/>
        </module>

        <!-- Проверяем отступы -->
        <module name="Indentation"/>

        <!-- Требуем camelCase имена методов -->
        <module name="MethodName"/>

        <!-- Проверяем пробелы после ключевых слов -->
        <module name="WhitespaceAfter"/>

        <!-- Проверяем, что все импорты отсортированы правильно -->
        <module name="ImportOrder">
            <property name="option" value="top"/>
            <property name="sortStaticImportsAlphabetically" value="true"/>
            <property name="sortImportsAlphabetically" value="true"/>
            <property name="separateLineBetweenGroups" value="true"/>
        </module>

        <!-- Требуем, чтобы классы и методы имели JavaDoc -->
        <module name="JavadocMethod">
            <property name="scope" value="public"/>
            <property name="allowMissingParamTags" value="true"/>
            <property name="allowMissingThrowsTags" value="true"/>
        </module>

    </module>

    <!-- Проверка кодировки (UTF-8) -->
    <module name="FileTabCharacter">
        <property name="eachLine" value="true"/>
    </module>

</module>